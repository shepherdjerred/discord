deps:
  FROM ../../+deno
  COPY . packages/backend
  COPY ../data+src/ packages/data/
  WORKDIR packages/backend
  RUN deno cache src/index.ts

check:
  FROM +deps
  RUN deno check src/index.ts
  RUN deno lint
  # RUN deno test -A --unstable

