{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "test",
      "args": ["-A", "--unstable-ffi", "--watch"],
      "problemMatcher": ["$deno-test"],
      "group": "test",
      "label": "deno: test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": { "runOn": "folderOpen" },
      "isBackground": true
    },
    {
      "type": "deno",
      "command": "lint",
      "args": ["--watch"],
      "problemMatcher": ["$deno-lint"],
      "group": "none",
      "label": "deno: test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": { "runOn": "folderOpen" },
      "isBackground": true
    },
    {
      "type": "deno",
      "command": "check",
      "args": ["./src/index.ts"],
      "problemMatcher": ["$deno"],
      "group": "none",
      "label": "deno: check"
    }
  ]
}
