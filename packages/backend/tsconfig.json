{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "declarationMap": true,
    "declaration": true,
    "jsxImportSource": "react"
  },
  "exclude": ["src/dev/", "dist/"]
}
